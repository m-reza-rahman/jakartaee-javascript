<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0"
         xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <security-constraint>
        <display-name>Secure JavaScript Clients</display-name>
        <web-resource-collection>
            <web-resource-name>Secure Interfaces</web-resource-name>
            <url-pattern>/todo.jsp</url-pattern>
            <url-pattern>/chat.jsp</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>javascript_user</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Secure Jakarta EE Back-End</display-name>
        <web-resource-collection>
            <web-resource-name>Secure Services</web-resource-name>
            <url-pattern>/resources/todo/*</url-pattern>
            <url-pattern>/chat</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>PUT</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <deny-uncovered-http-methods/>
    <login-config>
        <auth-method>BASIC</auth-method>
        <!-- Does not actually matter, EE 10 security will ignore this -->
        <realm-name>realm</realm-name>
    </login-config>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
